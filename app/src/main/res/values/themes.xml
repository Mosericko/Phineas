<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Phineas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainActivity" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#7BDE9D</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowAnimationStyle">@null</item>


    </style>

    <style name="GeneralTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/fantasygreen</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/fantasygreen</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowAnimationStyle">@null</item>


        <!--EditText hint color-->
        <item name="android:textColorHint">@color/c3</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/kaya</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">#C0C0C0</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/kaya</item>
        <item name="android:colorForeground">@color/kaya</item>
        <item name="android:textColorSecondary">@color/kaya</item>
    </style>

    <style name="UserRegistration" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/c3</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/fantasygreen</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowAnimationStyle">@null</item>


        <!--EditText hint color-->
        <item name="android:textColorHint">@color/c3</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/kaya</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">#C0C0C0</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/kaya</item>
        <item name="android:colorForeground">@color/kaya</item>
        <item name="android:textColorSecondary">@color/kaya</item>
    </style>
</resources>